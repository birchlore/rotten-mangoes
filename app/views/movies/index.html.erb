

  <div class="text-center spacer submit">
    <%= link_to "Submit a new movie >>", new_movie_path %> 
  </div>

  <% if @movies && @movies.count > 0 %>
  
  <div class="thumbnails">
    <% @movies.each do |movie| %>
      <%= render partial: "movies/movie", locals: {movie: movie} %>
    <% end %>
  </div>

  <% else %>
    <p>No results</p>
  <% end %>
