<% if flash[:alert] %>
    <div class="alert"><%= flash[:alert] %></div>
<% end %>

<h1>Welcome <%= @admin.firstname.capitalize %></h1>
<%= link_to "create new user >", new_admin_user_path %>
<div class="spacer">
</div>

<div class="container">



  <% @users.each do |user| %>

    <h3><%= user.full_name %> | <%= user.email %>
    <% if user.admin? %>
      | Administrator
    <% else %>
     | Regular User
    <% end %>
     | <%= link_to "see user details", admin_user_path(user) %>
    </h3>
    <div class="separator">
    </div>
  <% end %>

  <%= paginate @users %>


</div> <!-- End container>
