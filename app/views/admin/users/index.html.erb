<h1>Welcome <%= @admin.firstname.capitalize %></h1>
<p>Here are a list of current users</p>

<div class="container">

  <% @users.each do |user| %>

    <h3><%= user.full_name %> | <%= user.email %>
    <% if user.admin? %>
      | Administrator
    <% else %>
     | Regular User
    <% end %>
    </h3>
    
    <% if user.reviews.any? %>
      <h4>Reviews:</h4>
        <% user.reviews.each do |review| %>
        <p><em><%= review.movie.title %></em></p>
        <p><%= review.rating_out_of_ten %>/10. <%= review.text %></p>
        <% end %>
    <% end %>
    -------------------------

  <% end %>


</div> <!-- End container>
