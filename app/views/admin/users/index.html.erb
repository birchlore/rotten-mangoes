<h1>Welcome <%= @admin.firstname.capitalize %></h1>
<p>Here are a list of current users</p>

<div class="container">

  <% @users.each do |user| %>

    <h3><%= user.full_name %> | <%= user.email %>
    <% if user.admin? %>
      | Administrator
    <% else %>
     | Regular User
    <% end %>
     | <%= link_to "see user details", admin_user_path(user) %>
    </h3>
    -------------------------

  <% end %>


</div> <!-- End container>
