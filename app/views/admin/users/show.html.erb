<h1>Details for <%= @user.full_name %></h1>
<p><em><%= link_to "edit user", edit_admin_user_path %></em></p>
<p><em><%= link_to "delete user", admin_user_path(@user), :method => :delete, :"data-confirm" => "You sure?" %></em></p>
<p><em><%= link_to "become this user", "/admin/users/become/#{@user.id}/" %></em></p>
<div>
  <ul>
  <li><%= @user.email %></li>
  <li>Number of Movie Submissions: <%= @user.movies.count %></li>
  <li>Number of Reviews: <%= @user.reviews.count %></li>
  <li>Average Review: <%= @user.reviews.average(:rating_out_of_ten) %></li>
  </ul>

</div>

<div>
  <% if @user.reviews.any? %>
    <h4>Reviews:</h4>
      <% @user.reviews.each do |review| %>
      <p><em><%= link_to review.movie.title, movie_path(review.movie) %></em></p>
      <p><%= review.rating_out_of_ten %>/10. <%= review.text %></p>
      <% end %>
  <% end %>
</div>
